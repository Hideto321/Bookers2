<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  
   <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="conteiner">
      <nav class="nav navber-nav navbar-left">
        <span class="title">Bookers</span>
      </nav>
      <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user.id) do  %>
            <span class="glyphicon glyphicon-home home" ></span>Home
            <% end %>
          </li>
          <li>
            <%= link_to users_path do  %>
            <span class="glyphicon glyphicon-user users" ></span>Users
            <% end %>
          </li>
          <li>
            <%= link_to books_path do  %>
            <span class="glyphicon glyphicon-book books" ></span>Books
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="glyphicon glyphicon-log-out logout" ></span>logout
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to root_path do  %>
            <span class="glyphicon glyphicon-home home" ></span>Home
            <% end %>
          </li>
          <li>
            <%= link_to home_about_path do %>
            <span class="glyphicon glyphicon-link about" ></span>About
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-edit sign_up" ></span>sign up
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path do %>
            <span class="glyphicon glyphicon-log-in sign_in" ></span>Login
            <% end %>
          </li>
        <% end %>
        
      </ul>
      </nav>
    </div>
  </header>
  <body>
    <div class="container" style="margin-top: 51px">
      <div class="row">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
